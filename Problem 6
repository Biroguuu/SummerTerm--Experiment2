#include <iostream>
#include <conio.h>

using namespace std;

	
int main()
	
{
    int x,sum,i;
    x = 0;
    sum = 0;
    
     cout << "Enter a number to get it's sum starting from 1: "; cin >> x;  
    
    while (x > 0)
    {
    	for(i=1; i <= x; ++i)
   		sum += i; 
    	cout << "The sum of the numbers up to " << x << " are = " << sum << endl;
    	cout << "Enter a number to get it's sum starting from 1: "; cin >> x;
    	sum = 0;
	}
	
	while (x <= 0)
	{
		cout << "THANK YOU!!!" << endl;
		break;
	}
    

	_getch();
	
	return 0;
	
}
