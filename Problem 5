#include <iostream>
#include <conio.h>

using namespace std;

int main() 
{  
  int x, c, fibonacci, a, b;
  
  a = 0;
  b = 1;
  
  cout << "Enter the number of terms in the Fibonacci Sequence: " << endl;
  cin >> fibonacci ;
  
  cout << "The Fibonacci sequence is" << endl;
  
  for ( x = 0 ; x < fibonacci ; x++)
	{
		
		if (x <= 1)
		
		{
			c = x;
		}
		
		else
		{
			c = a + b;
			a = b;
			b= c;
		}
	
		cout << c << ", ";
	}
	
	_getch();
	
	return 0;
	  
}
